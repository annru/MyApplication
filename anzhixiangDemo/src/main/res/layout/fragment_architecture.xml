    <Button
        android:id="@+id/mvp_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mvp" />
    <Button
        android:id="@+id/mvp_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mvp2" />

</LinearLayout>
